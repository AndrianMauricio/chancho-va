{
  "name": "chancho-va",
  "version": "1.0.0",
  "description": "",
  "main": "public/index.html",
  "scripts": {
    "copyfiles": "copyfiles -V -E -e \"**/*.ts\" -u 1 \"client/assets/**/*.*\" public",
    "cw": "rm -rf public && yarn copyfiles && parcel watch ./client/index.html",
    "cs": "parcel serve ./client/index.html",
    "cb": "rm -rf public && yarn copyfiles && parcel build ./client/index.html",
    "sw": "nodemon server/index.ts -w",
    "sb": "rm -rf dist && tsc",
    "build": "yarn cb && yarn sb",
    "start": "node dist/index.js",
    "prettier": "prettier client/**/*.* server/**/*.* shared/**/*.* -w"
  },
  "keywords": [
    "phaser",
    "web",
    "game"
  ],
  "author": "Andrian Mauricio",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.4",
    "phaser": "^3.24.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.2",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.33",
    "copyfiles": "^2.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,html}": "prettier --write"
  }
}
